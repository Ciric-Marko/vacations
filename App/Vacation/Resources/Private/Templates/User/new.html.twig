{% extends 'Page/vacation.base.html.twig' %}

{% block title %}Create new User{% endblock %}

{% block body %}
    {#{{ dump() }}#}
    {% for type, messages in flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm-8">
                <h2 class="text-center">Create new User</h2>
                <form action="{{ base }}/vacations/users/create" method="post" target="_self">
                    <div class="form-group">
                        <label for="firstName">First name</label>
                        <input name="entity[firstName]" type="text" class="form-control" id="firstName" placeholder="First name" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last name</label>
                        <input name="entity[lastName]" type="text" class="form-control" id="lastName" placeholder="Last name" required>
                    </div>
                    <div class="form-group">
                        <label for="userName">Username</label>
                        <input name="entity[userName]" type="text" class="form-control" id="userName" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="entity[password]" type="password" class="form-control" id="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="repeatPassword">Repeat password</label>
                        <input name="entity[repeatPassword]" type="password" class="form-control" id="repeatPassword" placeholder="Repeat password" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input name="entity[email]" type="email" class="form-control" id="email" placeholder="name@example.com" required>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input name="entity[admin]" type="checkbox" class="form-check-input" value="1">Is admin
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input name="entity[userWhoCanApproveVacation]" type="checkbox" class="form-check-input" value="1">Is user who can approve vacations
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="vacationDays">Vacation days</label>
                        <input name="entity[vacationDays]" type="number" class="form-control" id="vacationDays" placeholder="Vacation days" min="0" value="20">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                    </div>
                </form>
            </div>
            <div class="col-sm"></div>
        </div>
    </div>

{% endblock %}